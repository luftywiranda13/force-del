{
  "name": "force-del",
  "version": "2.0.0",
  "description": "Force delete files or folders using globs",
  "license": "MIT",
  "repository": "https://github.com/luftywiranda13/force-del",
  "author": {
    "name": "Lufty Wiranda",
    "email": "lufty.wiranda@gmail.com",
    "url": "https://www.luftywiranda.com"
  },
  "engines": {
    "node": ">=6"
  },
  "husky": {
    "hooks": {
      "pre-commit": "remove-lockfiles && lint-staged"
    }
  },
  "scripts": {
    "test:watch": "jest --watch",
    "test": "xo && jest --coverage"
  },
  "files": [
    "lib",
    "index.js"
  ],
  "dependencies": {
    "execa": "^2.0.1",
    "globby": "^8.0.1",
    "p-map": "^2.0.0",
    "rimraf": "^2.6.2"
  },
  "devDependencies": {
    "async-to-gen": "^1.3.3",
    "fixturez": "^1.1.0",
    "fs-extra": "^7.0.1",
    "g-status": "^2.0.0",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "pify": "^4.0.1",
    "remove-lockfiles": "^2.1.1",
    "xo": "^0.24.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.js$": "async-to-gen"
    }
  },
  "lint-staged": {
    "*.js": [
      "xo --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "bracketSpacing": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "xo": {
    "envs": [
      "jest"
    ],
    "prettier": true,
    "space": true
  },
  "keywords": [
    "clean",
    "cleaning",
    "cleanup",
    "del",
    "delete",
    "destroy",
    "dir",
    "directories",
    "directory",
    "file",
    "files",
    "filesystem",
    "folder",
    "folders",
    "fs",
    "glob",
    "gulpfriendly",
    "remove",
    "rimraf",
    "rm",
    "rmdir",
    "rmrf",
    "trash",
    "unlink"
  ]
}
